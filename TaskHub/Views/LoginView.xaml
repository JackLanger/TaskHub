<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskHub"
      xmlns:ViewModels="clr-namespace:TaskHub.ViewModels" x:Class="TaskHub.Views.LoginView"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginView">

    <Page.DataContext>
        <ViewModels:LoginViewModel/>
    </Page.DataContext>

    <Grid>
        <Frame 
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Margin="0"
            Padding="0"
            MinHeight="200"
            NavigationUIVisibility="Hidden"
            Content="{Binding CurrentPage, Converter={local:AppPageValueConverter},UpdateSourceTrigger=PropertyChanged}"
            Background="Transparent"
                />
    </Grid>
</Page>
