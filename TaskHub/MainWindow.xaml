<Window x:Class="TaskHub.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskHub"
        mc:Ignorable="d"
        Title="MainWindow" Height="948" Width="1600" WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="600"
        Opacity="1" Background="white"
        >


    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0"/>
            <RowDefinition Height="100"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="70"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Grid.RowSpan="6"
                   Background="#1e272e">


            <StackPanel.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="Foreground" Value="#34e7e4"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Width" Value="70"/>
                    <Setter Property="Background" Value="#1e272e"/>
                    <Setter Property="BorderBrush" Value="#1e272e"/>
                    <Setter Property="Margin" Value="0"/>
                    <Setter Property="Padding" Value="5"/>
                    <Setter Property="Cursor" Value="Hand"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="FontSize"  Value="10"/>
                    
                    <!--this is the mouse overpart-->

                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border Background="{TemplateBinding Background}">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#485460"/>
                        </Trigger>
                    </Style.Triggers>

                </Style>
                
            </StackPanel.Resources>

            <Button Click="Home_Click" >Home</Button>
            <Button Click="ShowData_Click">show Tasks</Button>
            <Button Click="AddData_Click">add Task</Button>
            <Button Click="CardView_Click">Card view</Button>
            <Button Click="AddData_Click" IsEnabled="False"></Button>
            <Button Click="AddData_Click" >Profile</Button>
            <Button >Exit</Button>

        </StackPanel>
        
            
            

        <!--Row1-->
        

        
        <!--Row2-->

        <ScrollViewer 
            Grid.Row="0"
            Grid.RowSpan="3"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            >
            
        
            <Frame 
                Margin="0"
                Padding="0"
                MinHeight="200"
                Name="MainFrame"
                NavigationUIVisibility="Hidden"
                ScrollViewer.CanContentScroll="True"
                ScrollViewer.VerticalScrollBarVisibility="Auto"
                >

            </Frame>
        </ScrollViewer>

        <!--Row3-->
        <!--Row4-->
        <!--Row5-->
        <!--Row6-->

        


    </Grid>
</Window>
